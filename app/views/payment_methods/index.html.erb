<h1>Способи оплати</h1>

<%= link_to 'Новий спосіб оплати', new_payment_method_path, class: 'btn btn-success mb-3' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Назва</th>
      <th>Дії</th>
    </tr>
  </thead>
  <tbody>
    <% @payment_methods.each do |method| %>
      <tr>
        <td><%= method.name %></td>
        <td>
          <%= link_to 'Переглянути', method, class: 'btn btn-info btn-sm' %>
          <%= link_to 'Редагувати', edit_payment_method_path(method), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Видалити', method, method: :delete, data: { confirm: 'Точно видалити?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>

    <%= link_to 'Назад', expenses_path, class: 'btn btn-secondary mt-2' %>
  </tbody>
</table>
