<h1>Категорії</h1>

<%= link_to 'Нова категорія', new_category_path, class: 'btn btn-success mb-3' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Назва</th>
      <th>Дії</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to 'Переглянути', category, class: 'btn btn-info btn-sm' %>
          <%= link_to 'Редагувати', edit_category_path(category), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Видалити', category, method: :delete, data: { confirm: 'Точно видалити?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>

    <%= link_to 'Назад', expenses_path, class: 'btn btn-secondary mt-2' %>
    
  </tbody>
</table>
