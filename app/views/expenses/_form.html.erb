<!-- app/views/expenses/_form.html.erb -->
<%= form_with model: expense, local: true, class: "mb-3" do |form| %>
  <% if expense.errors.any? %>
    <div class="alert alert-danger">
      <h4>Помилки:</h4>
      <ul>
        <% expense.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :amount %>
    <%= form.number_field :amount, step: 0.01, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :date %>
    <%= form.datetime_select :date, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :categories %>
    <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
      <div class="form-check">
        <%= b.check_box(class: "form-check-input") %>
        <%= b.label(class: "form-check-label") %>
      </div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :payment_methods %>
    <%= form.collection_check_boxes :payment_method_ids, PaymentMethod.all, :id, :name do |b| %>
      <div class="form-check">
        <%= b.check_box(class: "form-check-input") %>
        <%= b.label(class: "form-check-label") %>
      </div>
    <% end %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
