<%= form_with model: @payment_method, local: true do |form| %>
  <% if @payment_method.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @payment_method.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>


  <%= form.submit "Зберегти", class: "btn btn-primary" %>
<% end %>
